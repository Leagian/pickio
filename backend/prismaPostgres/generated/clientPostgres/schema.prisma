datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRES_DB_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/clientPostgres"
}

model User {
  user_id         String        @id @default(uuid())
  username        String        @unique
  email           String        @unique
  password        String
  profile_picture String?
  bio             String?
  interests       String?
  created_at      DateTime      @default(now())
  followers       UserFollows[] @relation("Following")
  following       UserFollows[] @relation("Followers")
}

model UserFollows {
  userFollowsId   String   @id @default(uuid())
  follower_id     String   
  following_id    String   
  follower        User     @relation(name: "Followers", fields: [follower_id], references: [user_id])
  following       User     @relation(name: "Following", fields: [following_id], references: [user_id])
  created_at      DateTime @default(now())

  @@unique([follower_id, following_id])
}
